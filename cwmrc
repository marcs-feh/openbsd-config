# Clear all defaults
unbind-key   all
unbind-mouse all

# Appearance
fontname "JetBrains Mono NL:size=12"
borderwidth 2
moveamount  20
snapdist    10
vtile       55
color menubg "#cccccc"
color inactiveborder "#1e1e1e"
color activeborder "#b0ce8c"

# Keyboard bindings
## Core bindings
bind-key S4-Return terminal
bind-key 4-Return  menu-cmd
bind-key 4-p  menu-exec
bind-key 4-f  menu-window
bind-key 4-q  window-close
bind-key C4-r restart
bind-key C4-q quit
## Move and Resize
bind-key S4-f window-maximize
bind-key 4-h  window-move-left
bind-key 4-j  window-move-down
bind-key 4-k  window-move-up
bind-key 4-l  window-move-right
bind-key S4-h window-resize-left
bind-key S4-j window-resize-down
bind-key S4-k window-resize-up
bind-key S4-l window-resize-right
## Window select
bind-key M-Tab   window-cycle
bind-key SM-Tab  window-rcycle
bind-key 4-space window-vtile

# Mouse bindings
bind-mouse 4-1 window-move
bind-mouse 4-2 window-maximize
bind-mouse 4-3 window-resize

# Ignore windows
ignore polybar

# Applications
command "Web Browser" librewolf
command "Editor"      "xterm -e $EDITOR"
command "Terminal"    "xterm"

